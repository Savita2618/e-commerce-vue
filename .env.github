# ===================================
# Variables d'environnement - GitHub Production  
# ===================================

# Configuration générale
NODE_ENV=production
COMPOSE_PROJECT_NAME=ecommerce-github-prod

# JWT Configuration
JWT_SECRET=efrei_super_pass_production_secret

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=production_password_12345
MONGODB_URI_AUTH=mongodb://admin:production_password_12345@mongodb-auth:27017/authdb?authSource=admin
MONGODB_URI_PRODUCTS=mongodb://admin:production_password_12345@mongodb-products:27017/productsdb?authSource=admin
MONGODB_URI_ORDERS=mongodb://admin:production_password_12345@mongodb-orders:27017/ordersdb?authSource=admin

# Services URLs (pour communication inter-services)
AUTH_SERVICE_URL=http://auth-service:3001
PRODUCT_SERVICE_URL=http://product-service:3000
ORDER_SERVICE_URL=http://order-service:3002

# Frontend Configuration (pour le build)
VITE_AUTH_SERVICE_URL=/api/auth
VITE_PRODUCT_SERVICE_URL=/api/products
VITE_ORDER_SERVICE_URL=/api/orders

# Ports
AUTH_SERVICE_PORT=3001
PRODUCT_SERVICE_PORT=3000
ORDER_SERVICE_PORT=3002
FRONTEND_PORT=8080

# MongoDB Ports (pour accès externe)
MONGODB_AUTH_PORT=27017
MONGODB_PRODUCTS_PORT=27018
MONGODB_ORDERS_PORT=27019

# Docker Registry GitHub
REGISTRY=ghcr.io
GITHUB_REPOSITORY=savita2618/e-commerce-vue
IMAGE_TAG=latest

# Debug
DEBUG=
LOG_LEVEL=info