# ===================================
# Variables d'environnement - Production
# ===================================

# Configuration générale
NODE_ENV=production
COMPOSE_PROJECT_NAME=ecommerce-prod

# Docker Registry & Images
REGISTRY=ghcr.io
GITHUB_REPOSITORY=Savita2618/e-commerce-vue
PROJECT_NAME=ecommerce
IMAGE_TAG=latest

# Variables pour docker-compose.prod.yml
CI_REGISTRY_IMAGE=ghcr.io/Savita2618/e-commerce-vue

# JWT Configuration (sera remplacé par les secrets Docker)
JWT_SECRET=efrei_super_pass_production_secret

# MongoDB Configuration (sera remplacé par les secrets Docker)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=production_password_12345

# URIs MongoDB pour production (utilise les secrets via conteneurs)
MONGODB_URI_AUTH=mongodb://mongodb-auth:27017/authdb
MONGODB_URI_PRODUCTS=mongodb://mongodb-products:27017/productsdb
MONGODB_URI_ORDERS=mongodb://mongodb-orders:27017/ordersdb

# Services URLs (communication inter-services)
AUTH_SERVICE_URL=http://auth-service:3001
PRODUCT_SERVICE_URL=http://product-service:3000
ORDER_SERVICE_URL=http://order-service:3002

# Frontend Configuration (URLs internes pour la production)
VITE_AUTH_SERVICE_URL=/api/auth
VITE_PRODUCT_SERVICE_URL=/api/products
VITE_ORDER_SERVICE_URL=/api/orders

# Ports pour production
AUTH_SERVICE_PORT=3001
PRODUCT_SERVICE_PORT=3000
ORDER_SERVICE_PORT=3002
FRONTEND_PORT=8080

# Debug (désactivé en production)
DEBUG=
LOG_LEVEL=info

# Sécurité
SECURE_COOKIES=true
CORS_ORIGIN=http://localhost:8080

# Monitoring
HEALTH_CHECK_TIMEOUT=30s
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_RETRIES=3